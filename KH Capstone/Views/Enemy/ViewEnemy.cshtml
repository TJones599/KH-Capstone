@using KH_Capstone.Models
@model EnemyDropsVM
@{
    ViewBag.Title = "ViewEnemy";
}

<table class="table">
    <tbody style="background-color: cadetblue; color: lightcyan;">
        <tr>
            <td rowspan="2" style="width:150px">
                <img src="@Url.Content(Model.enemy.ImagePath)" alt="@Model.enemy.Name" height="150" width="150" />
            </td>
            <td>
                @Model.enemy.Name
            </td>
            <td>
                @Model.enemy.Location
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @Model.enemy.Description
            </td>
        </tr>
    </tbody>
</table>
<br />

<table class="table">
    <tbody style="background-color: cadetblue; color: lightcyan;">
        @foreach (ItemPO item in Model.Items)
        {
            <tr>
                <td rowspan="2" style="width:150px">
                    <img src="@Url.Content(item.ImagePath)" alt="@item.Name" height="150" width="150" />
                </td>
                <td>
                    <text style="color:black;">Name: </text>
                    @Html.ActionLink(item.Name, "ViewItem", "Item", new { id = item.ItemID }, new {style="color:lightcyan; text-decoration:underline;" })
                    @*@item.Name*@
                </td>
                <td>
                    <text>Shops</text>
                    @if (item.Purchasable)
                    {
                        <span style="color:black;"><b> sell </b></span>
                    }
                    else
                    {
                        <span style="color:red;"><b> do not sell </b></span>
                    }
                    <text>this item</text>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <text style="color:black;">Description: </text>
                    @item.Description
                </td>
            </tr>
            <tr style="background-color:darkslategray;">
                <td colspan="4">

                </td>
            </tr>
        }
    </tbody>
</table>
