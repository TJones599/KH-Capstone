@using KH_Capstone.Models
@model ItemPO
@{
    ViewBag.Title = "UpdateItem";
}

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateItem", "Item", FormMethod.Post))
{
    @Html.HiddenFor(model => Model.ItemID)
    @Html.HiddenFor(model => Model.ImagePath)

    @Html.LabelFor(model => Model.Name)
    <div>
        @Html.TextBoxFor(model => Model.Name, new { @class = "form-control" })
    </div>
    <br />

    @Html.LabelFor(model => Model.Description)
    <div>
        @Html.TextBoxFor(model => Model.Description, new { @class = "form-control" })
    </div>
    <br />

    @Html.LabelFor(model => Model.Type)
    <div>
        <input type="radio" name="Type" value="" class="hidden" checked="checked"/>

        <label>Item</label>
        <input type="radio" name="Type" value="Item" style="width:18px; height:18px;" />

        <label>Accessory</label>
        <input type="radio" name="Type" value="Accessory" style="width:18px; height:18px;" />
    </div>
    @Html.ValidationMessageFor(model => Model.Type, "", new { @style = "color:red" })
    <br />

    @*<div>
            <select class="form-control" id="ImagePath" name="ImagePath">
                <option>Item</option>
                <option>Accessory</option>
            </select>
        </div>*@

    @Html.LabelFor(model => Model.Purchasable, new { @class = "control-label col-md-2" })
    <div>
        @Html.CheckBoxFor(model => Model.Purchasable, new { @style = "heigh:18px; width:18px;", @class = "form-control" })
        @Html.ValidationMessageFor(model => Model.Purchasable, "", new { @style = "color:red" })
    </div>

    @Html.LabelFor(model => Model.Validated, new { @class = "control-label col-md-2" })
    <div>
        @Html.CheckBoxFor(model => Model.Validated, new { @style = "heigh:18px; width:18px;", @class = "form-control" })
        @Html.ValidationMessageFor(model => Model.Validated, "", new { @style = "color:red" })
    </div>
    <br />

    <input type="submit" value="Update" class="btn btn-success" />
}

