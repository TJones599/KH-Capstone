@using KH_Capstone.Models
@model RegisterVM
@{
    /**/

    ViewBag.Title = "Register";
}

<h2>New User Information</h2>
<br />

<div style="border:2px solid white; padding-left:22px;">
    <span>Example User:</span>
    <div class="row">
        <div class="col-sm-6">
            <div class="row">
                <span>First Name: <text style="color:lightgreen">Tyler</text></span>
            </div>
            <div class="row">
                <span>Username: <text style="color:lightgreen">CodeJunky</text></span>
            </div>
            <div class="row">
                <span>New Password: <text style="color:lightgreen">C0d3Fr3ak</text></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <span>Last Name: <text style="color:lightgreen">Jones</text></span>
            </div>
            <div class="row"></div>
            <div class="row">
                <span>Password Confirmation: <text style="color:lightgreen">C0d3Fr3ak</text></span>
            </div>
        </div>
    </div>
</div>
<br />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-sm-6">
            <div class="row" style="margin-left:15px;">
                <text>Optional</text>
            </div>
            <div class="row text-nowrap">
                <div class="col-sm-4">
                    @Html.LabelFor(model => Model.FirstName, new { @class = "col-md-4 control-label col-sm-4" })
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => Model.FirstName, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="row" style="margin-left:15px;">
                <text>Optional</text>
            </div>
            <div class="row text-nowrap">
                <div class="col-sm-4">
                    @Html.LabelFor(model => Model.LastName, new { @class = "col-md-4 control-label col-sm-4" })
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => Model.LastName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="col-sm-2 text-nowrap">
            @Html.LabelFor(model => Model.UserName, new { @class = "col-md-4 control-label col-sm-4" })
        </div>
        <div class="col-sm-4">
            @Html.TextBoxFor(model => Model.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.UserName,"",new { @style = "color:red" })
        </div>
        <div class="col-sm-6">
        </div>
    </div>
    <br />
    <button onclick="showModal()" type="button" style="background-color:darkslategray;">Password Requirements</button>
    <div class="row">
        <div class="col-sm-2 text-nowrap">
            @Html.LabelFor(model => Model.NewPassword, new { @class = "col-md-4 control-label col-sm-4" })
        </div>
        <div class="col-sm-4">
            <br />
            @Html.PasswordFor(model => Model.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => Model.NewPassword, "", new { @style = "color:red" })
        </div>
        <div class="col-sm-2 text-nowrap">
            @Html.LabelFor(model => Model.PasswordConfirmation)
        </div>
        <div class="col-sm-4">
            <br />
            @Html.PasswordFor(model => Model.PasswordConfirmation, new { @class = "form-control" })

            @Html.ValidationMessageFor(model => Model.PasswordConfirmation, "", new { @style = "color:red" })

        </div>
    </div>
    <br />
    <br />

    <input type="submit" value="Create Profile" class="btn btn-success" />
}

<div id="PasswordModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="text-align:center;">
            <div class="modal-body">
                <span style="margin-left:12px;">Passwords must include:</span><br />
                <span style="margin-left:12px;">1 <text style="color:lightgreen">Uppercase letter</text> - 1 <text style="color:lightgreen">Lowercase letter</text></span><br />
                <span style="margin-left:12px;">1 <text style="color:lightgreen">Number</text> - 5-22 <text style="color:lightgreen">characters</text> </span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" language="javascript">
    function showModal() {
        $('#PasswordModal').modal();
    }
</script>

