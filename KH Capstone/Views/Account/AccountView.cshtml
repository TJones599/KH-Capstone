@using KH_Capstone.Models
@model UserPO
@{
    ViewBag.Title = "AccountView";
}

<h2>@Model.UserName</h2>

@using (@Html.BeginForm("AccountView", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => Model.UserName)
    @Html.HiddenFor(model => Model.UserID)
    <br />

    @Html.LabelFor(modle => Model.FirstName)
    <div>
        @Html.DisplayTextFor(model => Model.FirstName)
    </div>
    @Html.LabelFor(model => Model.LastName)
    <div>
        @Html.DisplayTextFor(mode => Model.LastName)
    </div>
    <br />
    @Html.ActionLink("Update User Info", "UpdateUser", "Account", new { id = Model.UserID }, new { @class = "btn btn-primary" })
    <span style="padding-left: 50px">

    </span>
    @Html.ActionLink("Update Password", "UpdatePassword", "Account", new { id = Model.UserID }, new { @class = "btn btn-primary" })
    <span style="padding-left: 50px">

    </span>
    @Html.ActionLink("Deactivate Account", "UpdateAccountStatus", "Account", new { id = Model.UserID, statusUpdate=1 }, new { @class = "btn btn-danger" })

}

